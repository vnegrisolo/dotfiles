alias l='ls -lah';
alias open_file_system_to_web='ifconfig | grep 192.168; python -m SimpleHTTPServer 8998;';
alias gs='git status';

alias be='bundle exec';
alias berm="echo '#=> run 1st migration'; be rake db:migrate && echo '#=> run rollback'; be rake db:rollback && echo '#=> run 2nd migration'; be rake db:migrate && echo '#=> run test prepare'; be rake db:test:prepare";
alias ec2s='for s in staging production; do echo $s; be cap $s ec2:status; done;'

source ~/.functions/colors.zsh;
source ~/.functions/tail-in-colors.zsh;
alias tail='tail-in-colors';

source ~/.functions/git.zsh;
source ~/.functions/ruby.zsh;
alias rake_diff='rubocop_diff; haml_diff; rspec_diff';

alias gitx='/Applications/GitX.app/Contents/MacOS/GitX .';

if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls --color=auto'

  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
fi
