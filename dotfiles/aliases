alias l='ls -lah';
alias openFileSystemToWeb='ifconfig | grep 192.168; python -m SimpleHTTPServer 8998;';
alias gs='git status';
alias be='bundle exec';
alias berm='be rake db:migrate && be rake db:rollback && be rake db:migrate && be rake db:test:prepare'
alias ec2s='for s in staging production; do echo $s; be cap $s ec2:status; done;'

source ~/.functions/colors.zsh;
source ~/.functions/tail-in-colors.zsh;
alias tail='tail-in-colors';

alias gitx='/Applications/GitX.app/Contents/MacOS/GitX .';

if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls --color=auto'

  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
fi
